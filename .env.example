# API Service Environment Configuration
# 
# This file defines environment variables for the API service layer.
# Copy this to .env.local and customize the values for your environment.

# ===========================================
# API Configuration
# ===========================================

# Base URL for the backend API
VITE_API_BASE_URL=https://hunterna-api-production.up.railway.app

# Request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Number of retry attempts for failed requests
VITE_API_RETRY_COUNT=3

# Enable API request/response logging (development only)
VITE_ENABLE_API_LOGGING=true

# Enable mock data fallback when API is unavailable
VITE_MOCK_DATA_FALLBACK=true

# ===========================================
# Feature Flags
# ===========================================

# Enable API-based authentication (set to false to use mock auth)
VITE_FEATURE_FLAG_API_AUTH=false

# Enable API-based card operations (set to false to use mock cards)
VITE_FEATURE_FLAG_API_CARDS=false

# Enable API-based pack operations (set to false to use mock packs)
VITE_FEATURE_FLAG_API_PACKS=false

# Enable API-based transaction operations (set to false to use mock transactions)
VITE_FEATURE_FLAG_API_TRANSACTIONS=false

# ===========================================
# Development Configuration
# ===========================================

# Override for development environment
# VITE_API_BASE_URL=http://localhost:3001

# Enable all API features for testing
# VITE_FEATURE_FLAG_API_AUTH=true
# VITE_FEATURE_FLAG_API_CARDS=true
# VITE_FEATURE_FLAG_API_PACKS=true
# VITE_FEATURE_FLAG_API_TRANSACTIONS=true

# ===========================================
# Production Configuration
# ===========================================

# For production deployment, set these values:
# VITE_API_BASE_URL=https://hunterna-api-production.up.railway.app
# VITE_ENABLE_API_LOGGING=false
# VITE_MOCK_DATA_FALLBACK=false
# VITE_FEATURE_FLAG_API_AUTH=true
# VITE_FEATURE_FLAG_API_CARDS=true
# VITE_FEATURE_FLAG_API_PACKS=true
# VITE_FEATURE_FLAG_API_TRANSACTIONS=true

# ===========================================
# Additional Configuration
# ===========================================

# Authentication configuration
# VITE_AUTH_TOKEN_STORAGE=localStorage
# VITE_AUTH_REFRESH_THRESHOLD=300000

# Caching configuration
# VITE_CACHE_STALE_TIME=300000
# VITE_CACHE_GC_TIME=600000

# Payment configuration
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
# VITE_PAYPAL_CLIENT_ID=...

# Analytics configuration
# VITE_ANALYTICS_ENABLED=true
# VITE_ANALYTICS_TRACKING_ID=...

# Error reporting configuration
# VITE_SENTRY_DSN=...
# VITE_ERROR_REPORTING_ENABLED=true